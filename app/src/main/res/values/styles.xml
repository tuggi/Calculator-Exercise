<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorDarkGray</item>
        <item name="android:textSize">35dp</item>
    </style>

    <style name="OperationButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorLightGray</item>
        <item name="android:textSize">35dp</item>
    </style>

    <style name="EqualButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorGrayAccent</item>
        <item name="android:textSize">40dp</item>
    </style>

</resources>
